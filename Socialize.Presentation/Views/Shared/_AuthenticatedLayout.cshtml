@using Microsoft.AspNetCore.Identity
@using Socialize.Infrastructure.Identity.Models
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Socialize.Presentation</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Socialize.Presentation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a177f3304c.js" crossorigin="anonymous"></script>
</head>
<body class="h-screen flex flex-col">
    <header>
        <nav class="bg-white border-gray-200 px-4 lg:px-6 py-2.5 ">
            <div class="flex flex-wrap justify-between items-center max-w-screen-xl">
                <div class="flex items-center lg:order-1">
                    <a class="navbar-brand font-semibold text-red-600 font-body font-sans text-3xl" asp-area="" asp-controller="Posts" asp-action="Index">Socialize</a>
                </div>
                <div class="hidden justify-between items-center w-full lg:flex lg:w-auto lg:order-2" id="mobile-menu-2">
                    <ul class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0 w-full">
                        <li>
                            <a href="#" class="block py-2 pr-4 pl-3 text-white rounded bg-red-700 lg:bg-transparent lg:text-red-700 lg:p-0 text-white"><i class="fa-solid fa-house"></i> Home</a>
                        </li>
                        <li>
                            <a href="#" class="block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-red-700 lg:p-0 text-gray-400 lg:hover:text-red-700 hover:bg-gray-700 hover:text-red-700 lg:hover:bg-transparent border-gray-700"><i class="fa-solid fa-user-group"></i> Friends</a>
                        </li>
                        <li>
                            <a href="#" class="block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-red-700 lg:p-0 text-gray-400 lg:hover:text-red-700 hover:bg-gray-700 hover:text-red-700 lg:hover:bg-transparent border-gray-700"><i class="fa-solid fa-gear"></i> My profile</a>
                        </li>                
                        <li class="flex gap-x-1 p-1 bg-red-500 rounded-full items-center">
                            <div >
                                <img alt="Your profile photo"
                                     src="@user.PhotoUrl"
                                     class="relative inline-block h-6 w-6 translate-x-px translate-y-px rounded-full object-cover object-center" />
                            </div>
                            <div>
                                <p class="block font-sans text-sm font-medium capitalize leading-none text-white antialiased">
                                    @user.UserName
                                </p>
                            </div>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="LogOut" class="block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-red-700 lg:p-0 text-gray-400 lg:hover:text-red-700 hover:bg-gray-700 hover:text-red-700 lg:hover:bg-transparent border-gray-700"><i class="fa-solid fa-right-from-bracket"></i> Sign Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>


    <footer class="border-top text-muted p-3 bg-red-600 text-white font-semibold">
        <div class="">
            &copy;@DateTime.Now.Year - Adrian Polanco
        </div>
    </footer>
    <script src="../../node_modules/flowbite/dist/flowbite.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
